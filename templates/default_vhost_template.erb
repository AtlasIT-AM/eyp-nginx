server {
  listen <%= @default_vhost_port %> default_server;

  root <%= @defaultdocroot %>;
  index index.html index.htm;

  server_name localhost;

  location / {
    try_files $uri $uri/ =404;
  }

  location <%= @serverstatus_url %>
  {
    stub_status on;
    <% @serverstatus_allowedips.each do |val| -%>allow <%= val %>;<% end %>
    deny all;
  }

  <%- if defined?(@charset) -%>
  charset <%= @charset %>;
  <%- end -%>

}
