server {
  listen <% if defined?(@listen_address) %><%= @listen_address %>:<% end %><%= @port %><% if @default %> default_server<% end %>;

  root <%= @documentroot %>;
  index <%= @directoryindex.join(' ') %>;

  server_name <%= @servername %>;

  access_log <%= @access_log %>;
  error_log <%= @error_log %>;

  <%- if defined?(@charset) -%>
  charset <%= @charset %>;
  <%- end -%>
